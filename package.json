{
  "name": "Bounties",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "hardhat compile",
    "deploy:arbitrumSepolia": "DEPLOY_NETWORK=arbitrumSepolia hardhat ignition deploy ignition/modules/PrivateERC20.ts --network arbitrumSepolia",
    "deploy:sepolia": "DEPLOY_NETWORK=sepolia hardhat ignition deploy ignition/modules/PrivateERC20.ts --network sepolia",
    "deploy:baseSepolia": "DEPLOY_NETWORK=baseSepolia hardhat ignition deploy ignition/modules/PrivateERC20.ts --network baseSepolia",
    "store-orders:arbitrumSepolia": "dotenv -e .env -- hardhat run scripts/storeOrders.ts --network arbitrumSepolia",
    "store-orders:sepolia": "dotenv -e .env -- hardhat run scripts/storeOrders.ts --network sepolia",
    "store-orders:baseSepolia": "dotenv -e .env -- hardhat run scripts/storeOrders.ts --network baseSepolia",
    "deposit-srlc:arbitrumSepolia": "dotenv -e .env -- hardhat run scripts/depositSRLC.ts --network arbitrumSepolia",
    "transfer:arbitrumSepolia": "dotenv -e .env -- hardhat run scripts/transfer.ts --network arbitrumSepolia",
    "transfer:sepolia": "dotenv -e .env -- hardhat run scripts/transfer.ts --network sepolia",
    "transfer:baseSepolia": "dotenv -e .env -- hardhat run scripts/transfer.ts --network baseSepolia",
    "cross-chain-transfer": "dotenv -e .env -- hardhat run scripts/crossChainTransfer.ts",
    "mint:arbitrumSepolia": "dotenv -e .env -- hardhat run scripts/mint.ts --network arbitrumSepolia",
    "verify:arbitrumSepolia": "dotenv -e .env -- hardhat ignition verify chain-421614 --network arbitrumSepolia",
    "test": "dotenv -e .env -- hardhat test --gas-stats",
    "test:iexec": "dotenv -e .env -- hardhat test test/iexec-integration.ts --gas-stats",
    "test:solidity": "dotenv -e .env -- hardhat test solidity --gas-stats -vvv",
    "compile": "hardhat compile",
    "clean": "hardhat clean"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-ignition": "^3.0.5",
    "@nomicfoundation/hardhat-toolbox-viem": "^5.0.1",
    "@nomicfoundation/hardhat-verify": "^3.0.7",
    "@types/chai": "^5.2.3",
    "@types/node": "^22.19.1",
    "chai": "^6.2.1",
    "dotenv-cli": "^11.0.0",
    "eciesjs": "^0.4.16",
    "forge-std": "github:foundry-rs/forge-std#v1.9.7",
    "hardhat": "^3.0.15",
    "iexec": "^8.8.0",
    "typescript": "~5.8.0",
    "viem": "^2.39.3"
  }
}
